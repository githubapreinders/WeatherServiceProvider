<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startscreen_background"
    android:orientation="vertical"
    tools:context="com.walkernation.aidlservice.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/startpage_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Gouda" />

        <TextView
            android:id="@+id/textView2"
            style="@style/startpage_text_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:text="Netherlands" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        style="@style/startpage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="10dp"
        android:text="27\u00B0C"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                style="@style/startpage_text_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Windspeed" />

            <TextView
                android:id="@+id/textView6"
                style="@style/startpage_text_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="Humidity" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            style="@style/startpage_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/winddir_e" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView7"
            style="@style/startpage_text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/sunrise_small_coloured"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="07:22" />

        <TextView
            android:id="@+id/textView8"
            style="@style/startpage_text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/sunset_smallcoloured"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:text="19:57" />
    </LinearLayout>

    <LinearLayout 
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/textView9"
        style="@style/startpage_text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="1"
        android:text="Dinsdag 26 mei"
        android:paddingBottom="10dp"
        android:textStyle="italic" />

    
    <TextView
        android:id="@+id/textView10"
        style="@style/startpage_text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_weight="1"
        android:text=" 22:40"
        android:paddingBottom="10dp"
        android:textStyle="italic" />
    
    
    </LinearLayout>
    
</LinearLayout>