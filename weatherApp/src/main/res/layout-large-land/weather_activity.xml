<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fog_night"
    android:orientation="vertical"
    tools:context="com.walkernation.aidlservice.MainActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/textView1"
        style="@style/startpage_text_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:text="Gouda" />

    <TextView
        android:id="@+id/textView2"
        style="@style/startpage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Netherlands" 
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/textView3"
        style="@style/startpage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="27\u00B0C"
        android:paddingLeft="15dp"
        android:textSize="100sp" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/textView4"
        style="@style/startpage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:text="Windspeed" />

    <ImageView
        android:id="@+id/imageView5"
        style="@style/startpage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src = "@drawable/winddir_e"
         />

   </LinearLayout>
    
    <TextView
        android:id="@+id/textView6"
        style="@style/startpage_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingLeft="15dp"
        android:text="Humidity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal" >
   

    <TextView
        android:id="@+id/textView7"
        style="@style/startpage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/sunrise_small_coloured"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="07:22" />

    <TextView
        android:id="@+id/textView8"
        style="@style/startpage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/sunset_smallcoloured"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:text="19:57" />
 </LinearLayout>
    <TextView
        android:id="@+id/textView9"
        style="@style/startpage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Dinsdag 26 mei 2015"
        android:textSize="18sp"
        android:textStyle="italic" />

</LinearLayout>